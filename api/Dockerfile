# FROM node:13
# Можно использовать alpine версии образов - минифицированная версия linux
FROM node:13.12.0-alpine

# Указываем рабочую директорию внутри контейнера, название путь может быть любой
# к пример /app и т.д.
WORKDIR /usr/src/app

# Копируем внутрь контейнера 2 файла (package.json & package-lock.json)

COPY package*.json ./

# Запускаем внутри контейнера команду по установке всех зависимостей 

RUN npm install 

# Копируем все файлы в папке ./api внутрь контейнера

# Копируем внутрь контейнера все файлы и папки из ./api, чтобы не копировать
# node_modules нужно завести файл .dockerignore 
COPY . .